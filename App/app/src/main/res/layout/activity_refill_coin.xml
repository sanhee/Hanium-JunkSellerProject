<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wh_background"
    tools:context=".step.RefillCoin">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="동전 리필 화면"
            android:textColor="#fff">

        </TextView>

    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/remainCoin500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500원:"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/remainCoin500_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tNULL"
        android:textColor="#FF9800"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/remainCoin500"
        app:layout_constraintBottom_toBottomOf="@+id/remainCoin500"/>

    <TextView
        android:id="@+id/remainCoin100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100원:"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/remainCoin100_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tNULL"
        android:textColor="#FF9800"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/remainCoin100"
        app:layout_constraintBottom_toBottomOf="@+id/remainCoin100"/>


    <TextView
        android:id="@+id/remainCoin50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50원:"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/remainCoin50_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tNULL"
        android:textColor="#FF9800"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/remainCoin50"
        app:layout_constraintBottom_toBottomOf="@+id/remainCoin50"/>

    <TextView
        android:id="@+id/remainCoin10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10원:"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/remainCoin10_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tNULL"
        android:textColor="#FF9800"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/remainCoin10"
        app:layout_constraintBottom_toBottomOf="@+id/remainCoin10"/>



    <Button
        android:id="@+id/btn500"
        android:layout_width="60dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="+500"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.9"
        android:visibility="invisible"
       />
    <Button
        android:id="@+id/btn100"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+100"
        app:layout_constraintLeft_toRightOf="@id/btn500"
        app:layout_constraintBottom_toBottomOf="@+id/btn500"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btn50"
        android:layout_width="60dp"
        android:layout_height="50dp"

        android:text="+50"
        app:layout_constraintLeft_toRightOf="@id/btn100"
        app:layout_constraintBottom_toBottomOf="@+id/btn100"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btn10"
        android:layout_width="60dp"
        android:layout_height="50dp"

        android:text="+10"
        app:layout_constraintLeft_toRightOf="@id/btn50"
        app:layout_constraintBottom_toBottomOf="@+id/btn50"
        android:visibility="invisible"
        />



    <Button
        android:id="@+id/btnMain"
        android:layout_width="400dp"
        android:layout_height="70dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="뒤로가기"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.6"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/stepImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/coin2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/editText_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루투스 연결시도"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>