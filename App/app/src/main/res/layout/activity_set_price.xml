<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wh_background"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/mainTitle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/recipt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:id="@+id/objectType1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="품목:"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/objectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tNULL"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/objectType1"
        app:layout_constraintBottom_toBottomOf="@+id/objectType1"/>

    <TextView
        android:id="@+id/objectWeight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무게:"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/objectWeight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tNULL"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/objectWeight1"
        app:layout_constraintBottom_toBottomOf="@+id/objectWeight1"/>


    <TextView
        android:id="@+id/objectPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격:"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/objectPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tNULL"
        android:textSize="40dp"
        android:textColor="#FF0000"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/objectPrice1"
        app:layout_constraintBottom_toBottomOf="@+id/objectPrice1"/>


    <com.nihaskalam.progressbuttonlibrary.CircularProgressButton
        android:id="@+id/btnExchange"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:textSize="22sp"
        app:pb_cornerRadius="48dp"
        app:pb_colorIndicator="@color/colorButtonCompleteState"
        app:pb_selectorCancel="@color/pb_cancel_state_selector"
        app:pb_selectorComplete="@color/complete_state_selector"
        app:pb_selectorError="@color/error_state_selector"
        app:pb_selectorIdle="@color/idle_state_selector"
        app:pb_textColorAfterClick="@color/colorWhite"
        app:pb_colorCancelText="@color/pb_orange"
        app:pb_colorErrorText="#000000"
        app:pb_colorCompleteText="#ffffff"
        app:pb_textIdle="환전하기"
        app:pb_textComplete="환전시작"
        app:pb_textError="환전불가"/>




</androidx.constraintlayout.widget.ConstraintLayout>